<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_weight="3"
    android:layout_height="0dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/five_second"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Most Fantastic
                          Memory"
        android:textSize="23sp"
        android:textStyle="italic"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorWhite"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_favorite_border_white_18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:id="@+id/love_list"/>

</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
<TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:text="Adventure"
    android:gravity="center"
    android:textColor="@color/colorBlack"
    android:textSize="18dp"
    android:textStyle="italic|bold"
    android:id="@+id/adventure_part"
    />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDivider"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Comedy"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="italic"
            android:id="@+id/comedy_part"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDivider"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Mystery"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="italic"
            android:id="@+id/mystery_part"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDivider"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Magic"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="italic"
            android:id="@+id/magic_part" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/the_list"
        android:visibility="visible">
    </include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Waiting..."
            android:textSize="50sp"
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/waitingLoading"/>
    </RelativeLayout>

</LinearLayout>